<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AlumnesFragment">

        <EditText
            android:id="@+id/nom"
            android:layout_width="380dp"
            android:layout_height="59dp"
            android:layout_marginTop="148dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/nom_del_alumne"
            android:inputType="text"
            android:text="@string/nom_del_alumne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nota"
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/nota_10"
            android:inputType="text"
            android:text="@string/nota_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grup" />

        <EditText
            android:id="@+id/grup"
            android:layout_width="379dp"
            android:layout_height="64dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="56dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/grup_smx"
            android:inputType="text"
            android:text="@string/grup_smx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            tools:ignore="DuplicateSpeakableTextCheck,VisualLintBounds" />

        <Button
            android:id="@+id/button_afegir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/afegir"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="523dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>